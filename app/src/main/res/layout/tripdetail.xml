<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context="com.driver.hire_me.Myreview">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tripempty"
        android:layout_toRightOf="@+id/tripempty">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_color">

                <Button
                    android:id="@+id/recancel"
                    style="@style/Back_button_Style"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp" />

                <com.custom.BTextView
                    app:btextfont="@string/buttom_fonts"
                    android:id="@+id/textView14"
                    style="@style/Header_Style"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/trip_detail"
                    android:textAllCaps="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:clickable="false" />

                <ImageView
                    android:id="@+id/canceled_icon"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:padding="15dp"
                    android:src="@drawable/cancelled_trip"/>

            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_trip_detail" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/car_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/suv_icon" />

                    <LinearLayout
                        android:id="@+id/ll_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/car_icon"
                        android:orientation="vertical">

                        <com.custom.BTextView
                            android:id="@+id/detaildate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/date"
                            android:textAllCaps="true"
                            app:btextfont="@string/RobotoCondensed"
                            android:textSize="17sp" />
                        <!--   android:layout_marginTop="10dp"-->
                        <com.custom.BTextView
                            app:btextfont="@string/RobotoCondensed"
                            android:id="@+id/car_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Medium_Text"
                            android:textColor="@color/blue_color"
                            android:textSize="@dimen/text_trip_detail" />

                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/view_trip_detail" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp">


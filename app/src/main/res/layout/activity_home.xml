        <com.custom.BTextView
            android:id="@+id/tv_signIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in"
            android:textSize="40sp"
            android:textColor="@color/bt_black"
            android:layout_marginBottom="20dp"
            app:btextfont="@string/RobotoCondensed"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="190dp"/>

        <com.custom.BTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f3444444"
            android:textSize="16sp"
            app:btextfont="@string/RobotoCondensed"
            android:text="@string/or_sign_up_if_you_re_not_a_member"
            android:layout_below="@+id/tv_signIn"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


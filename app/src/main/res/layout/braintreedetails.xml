                  android:cropToPadding="true"
                  android:src="@drawable/calender"
                  android:background="@null"/>-->


            <android.support.design.widget.TextInputLayout
                android:id="@+id/brainlayout_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:textColorHint="#666666">

                <EditText
                    android:id="@+id/brainaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/street_address"
                    android:textColor="#000"
                    android:textColorHint="#666666" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/brainlayout_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:textColorHint="#666666">

                <EditText
                    android:id="@+id/brainaccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789"
                    android:hint="@string/account_number"
                    android:inputType="phone"
                    android:maxLength="25"
                    android:textColor="#000"
                    android:textColorHint="#666666" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/brainlayout_locality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:textColorHint="#666666">

                <EditText
                    android:id="@+id/brainlocality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/locality"
                    android:textColor="#000"
                    android:textColorHint="#666666" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/brainlayout_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:textColorHint="#666666">

                <EditText
                    android:id="@+id/brainregion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/region"
                    android:textColor="#000"
                    android:textColorHint="#666666" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/brainlayout_postal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:textColorHint="#666666">

                <EditText
                    android:id="@+id/brainpostal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789"
                    android:hint="@string/postal_code"
                    android:inputType="phone"
                    android:maxLength="25"
                    android:textColor="#000"
                    android:textColorHint="#666666" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/brainlayout_routing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:textColorHint="#666666">

                <EditText
                    android:id="@+id/brainrouting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789"
                    android:hint="@string/routing_number"
                    android:inputType="phone"
                    android:maxLength="25"
                    android:textColor="#000"
                    android:textColorHint="#666666" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/update"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="80dp"
                android:background="#ff6666"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="#fff"

                android:textStyle="bold" />

            <!-- <Button android:id="@+id/btn_signup"

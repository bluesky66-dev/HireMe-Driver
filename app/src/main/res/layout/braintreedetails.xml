    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="50dp"
            android:paddingTop="40dp">


            <!--
                    android:background="@drawable/layoutbrain"
            -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/brainlayout_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textColorHint="#666666">

                <EditText
                    android:id="@+id/brainfirstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/brainfirstname"
                    android:inputType="textVisiblePassword"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="#666666" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/brainlayout_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:textColorHint="#666666">

                <EditText
                    android:id="@+id/brainlastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/brainlastname"
                    android:inputType="textVisiblePassword"
                    android:textColor="#000"
                    android:textColorHint="#666666" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/brainlayout_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:textColorHint="#666666">

                <EditText
                    android:id="@+id/braindob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:hint="@string/braindob"
                    android:textColor="#000"
                    android:textColorHint="#666666" />
            </android.support.design.widget.TextInputLayout>

            <!--  <ImageButton
                  android:id="@+id/calender"
                  android:layout_width="50dp"
                  android:layout_height="50dp"

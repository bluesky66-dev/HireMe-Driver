<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="8dp"
        android:background="@color/dark_green"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Trip Detail"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:paddingRight="10dp"
        android:paddingTop="0dp"
        android:id="@+id/back_btn"
        android:background="@drawable/back_ic"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_rider_name"
                android:text="@string/rider_name"
                android:textColor="@color/text_color_blue"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_small"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_rider_name_value"
                android:text="Ramesh kumar"
                android:textColor="@color/text_color_black"
                android:layout_weight="2"
                android:textSize="@dimen/text_size_small"
                android:layout_marginLeft="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_marginTop="@dimen/margin_top_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_pickup"
                android:text="@string/pickup"
                android:textColor="@color/text_color_blue"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_small"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_pickup_value"
                android:text="New delhi okhla delhi 110019 India"
                android:textColor="@color/text_color_black"
                android:layout_weight="2"
                android:textSize="@dimen/text_size_small"
                android:layout_marginLeft="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_marginTop="@dimen/margin_top_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_drop"
                android:text="@string/drop"
                android:textColor="@color/text_color_blue"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_small"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_drop_value"
                android:text="Kalka ji new delhi Delhi India"
                android:textColor="@color/text_color_black"
                android:layout_weight="2"
                android:textSize="@dimen/text_size_small"
                android:layout_marginLeft="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_marginTop="@dimen/margin_top_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_date"
                android:text="@string/date"
                android:textColor="@color/text_color_blue"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_small"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_date_value"
                android:text="2016-12-05 03:30:20"
                android:textColor="@color/text_color_black"
                android:layout_weight="2"
                android:textSize="@dimen/text_size_small"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_marginTop="@dimen/margin_top_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_distance"
                android:text="@string/distance"
                android:textColor="@color/text_color_blue"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_small"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_distance_value"
                android:text="1.9 km"
                android:textColor="@color/text_color_black"
                android:layout_weight="2"
                android:textSize="@dimen/text_size_small"
                android:layout_marginLeft="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_marginTop="@dimen/margin_top_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_amount"
                android:text="@string/amount"
                android:textColor="@color/text_color_blue"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_small"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_amount_value"
                android:text="$45.22"
                android:textColor="@color/text_color_black"
                android:layout_weight="2"
                android:textSize="@dimen/text_size_small"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>